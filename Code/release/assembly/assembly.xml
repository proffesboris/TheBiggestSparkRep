<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/distr/jar/</directory>
            <outputDirectory>k7m-distr/oozie-app/cb/K7M/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>distr/sh/</directory>
            <outputDirectory>k7m-distr/oozie-app/cb/K7M/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>distr/xml/</directory>
            <outputDirectory>k7m-distr/oozie-app/cb/K7M/</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/distr/setup/ctl/</directory>
            <outputDirectory>k7m-distr/</outputDirectory>
            <includes>
                <include>*.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>distr/setup/ctl/cfg/</directory>
            <outputDirectory>k7m-distr/</outputDirectory>
            <includes>
                <include>*.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>distr/setup/role/</directory>
            <outputDirectory>k7m-distr/setup/role/</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.hql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/distr/setup/hive/</directory>
            <outputDirectory>k7m-distr/oozie-app/cb/K7M/</outputDirectory>
            <includes>
                <include>*.csv</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>distr/pim/</directory>
            <outputDirectory>k7m-distr/oozie-app/cb/K7M-PIM/</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>distr/int/</directory>
            <outputDirectory>k7m-distr/oozie-app/cb/K7M-INT/</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.xml</include>
                <include>*.jar</include>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/distr/static/</directory>
            <outputDirectory>k7m-distr/static/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/int/jar/</directory>
            <outputDirectory>k7m-distr/oozie-app/cb/K7M-INT/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
